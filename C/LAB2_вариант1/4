##define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<malloc.h>
#define C 100 
#define CC 100 
int main()
{
	int N, M, n;
	float num;
	float A[C][CC] = { }; // С строк CC СТОЛБОВ
	float B[C] = { }; //ОДНОМЕРНый
	printf("Enter matrix NxM");
	printf("\n Enter N "); scanf("%i", &N); //СТРОКИ
	printf("\n Enter M "); scanf("%i", &M);	//СТОЛБЦЫ

	for (int j = 0; j < M; j++) //ЗАПОЛНЯЕМ МАССИВ И ВЫЧИСЛЯЕМ ОТВЕТЫ
	{
		for (int i = 0; i < N; i++)
		{
			scanf("%f", &A[i][j]);
			B[i] = A[i][j] + B[i];
		}
	}

	printf("matrix: \n");
	for (int j = 0; j < M; j++) //выводим массив
	{
		for (int i = 0; i < N; i++)
		{
			printf("%f ", A[i][j]);
		}
		printf("\n");
	}

	printf("matrix result: \n");
	for (int i = 0; i < N; i++)
	{
		printf("%f ", B[i]);
	}
}